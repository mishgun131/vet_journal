doctype html
html(ng-app='vet_clinic_app')
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        //link(rel="icon", href="../../favicon.ico")
        link(href="/stylesheets/jquery.typeahead.css", rel="stylesheet")
        link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
        link(href="/stylesheets/bootstrap-theme-paper.min.css", rel="stylesheet")
        //link(href="/stylesheets/jquery-ui.min.css", rel="stylesheet")
        link(href="/stylesheets/animate.css", rel="stylesheet")
        link(href="/stylesheets/style.css", rel="stylesheet")
        script(src="/javascripts/libs/jquery-1.11.3.min.js")
        //script(src="/javascripts/jquery-ui.min.js")
        script(src="/javascripts/libs/angular-1.3.15.min.js")
        script(src="/javascripts/libs/jquery.noty-2.3.7.min.js")
        script(src="/javascripts/libs/jquery.dataTables.min.js")
        script(src="/javascripts/libs/bootstrap.min.js")
        //data tables lib
        script(src="/javascripts/libs/dataTables.bootstrap.min.js")
        //live search lib
        script(src="/javascripts/libs/jquery.typeahead.js")
        script(src="/javascripts/layout.js")
        if client
            title
                | #{client.fio}
        else
            title
                | Ветеринарный журнал
    body
        nav(class="navbar navbar-inverse navbar-fixed-top")
            div(class="container")
                div(class="navbar-header")
                    a(class="navbar-brand", href="/")= "Владимирский"
                div(id="navbar", class="collapse navbar-collapse")
                    ul(class="nav navbar-nav")
                        li
                            a(href="/clients")
                                | Клиенты
                        if client
                            li
                                a(href="#", id="client") #{client.fio}
                    ul(class = 'nav navbar-nav navbar-right')
                        li
                            a(id = 'session-destroy', href = '#')
                                | Выход
                    form(class = 'navbar-form navbar-right', style = 'width:300px')
                        div(class = 'typeahead__container', style = 'width:100%')
                            input(type = 'search', class = 'live-search form-control', placeholder = 'Поиск по клиентам', style = 'width:100%')
        block content

