extends layout
block content
    div(ng-controller = 'dict-drugs-controller')
        div(class = 'row', style = 'margin-left: 0')
            h1
                | Список препаратов
            div(style = 'margin-left: 25px; margin-top: 4px')
                button(type = 'button', class = 'btn btn-outline-primary', data-toggle = 'modal', data-target = '#add-drug-modal')
                    | Добавить препарат
        table(id='drugs-table', class='table table-striped table-bordered', cellspacing='0', width='100%')
            thead
                tr(style='text-align:center')
                    th= 'Наименовение'
                    th= 'Форма выпуска'
                    th= 'Цена'

block modals
    //-Окно добавления нового питомца
    div(class = 'modal fade', id = 'add-drug-modal', tabindex = '-3', role = 'dialog', aria-labelledby = 'add-drug-modal', aria-hidden = 'true')
        div(class = 'modal-dialog modal-lg', ng-controller='modal-add-drug', role = 'document')
            div(class = 'modal-content')
                div(class = 'modal-header')
                    h5(class = 'modal-title')
                        | Добавление препарата
                    button(type = 'button', class = 'close', data-dismiss = 'modal', aria-label = 'Close')
                        span(aria-hidden = 'true')
                            | &times;
                form(class = 'form-horizontal', name = 'addDrug', ng-submit = 'addDrugSubmit()')
                    div(class = 'modal-body add-client-modal')
                        div(class = 'container-fluid')
                            div(class = 'row')
                                label(for = 'new-drug-name', class = 'col-md-4')
                                    | Наименование препарата*
                                input(type = 'text', class = 'col-md-8 form-control form-control-sm', id = 'new-drug-name', ng-model = 'addDrugData.name', placeholder = 'Фуразепам', required)
                            div(class = 'row')
                                label(for = 'new-drug-release-form', class = 'col-md-4')
                                    | Форма выпуска
                                input(type = 'text', class = 'col-md-3 form-control form-control-sm', id = 'new-drug-release-form', ng-model = 'addDrugData.release_form', placeholder = '100 мг.')
                                label(for = 'new-drug-price', class = 'col-md-2')
                                    | Цена
                                input(type='number', step='0.01', class = 'col-md-3 form-control form-control-sm', id = 'new-drug-price', ng-model = 'addDrugData.price', placeholder = '100 злотых')
                    div(class = 'modal-footer')
                        button(type = 'button', class = 'btn btn-secondary', data-dismiss = 'modal')
                            | Закрыть
                        button(type = 'submit', class = 'btn btn-primary')
                            | Сохранить

block end-scripts
    //-data tables lib
    link(href = '/datatables/css/jquery.datatables.min.css', rel = 'stylesheet')
    script(src = '/datatables/js/jquery.datatables.min.js')
    script(src = '/javascripts/dict-drugs.js')